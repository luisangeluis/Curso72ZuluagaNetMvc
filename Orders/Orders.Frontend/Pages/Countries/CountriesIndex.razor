@page "/countries"

<h3>Paises</h3>

@if(Countries == null)
{
    <p>Cargando...</p>
}
else
{
    
<table class="table table-striped">
    <thead>
        <tr>
            <th>Pais</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var country in Countries!)
        {
            <tr>
                <th>@country.Name</th>
                <td>
                    <a class="btn btn-warning">Editar</a>
                    <button class="btn btn-danger">Borrar</button>
                </td>
            </tr>
        }
       
    </tbody>
</table>
}




